<%= form_with(model: [:admin, company], local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p>会社名</p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <p>国</p>
    <%= form.label :country %>
    <%= form.collection_select :country_id, Country.all, :id, :name %>
  </div>

  <div class="field">
    <p>業界</p>
    <%= form.label :industry %>
    <%= form.collection_select :industry_id, Industry.all, :id, :name %>
  </div>


  <div class="field">
    <p>証券取引所</p>
    <%= form.label :market %>
    <%= form.collection_select :market_id, Market.all, :id, :name %>
  </div>

  <div class="field">
    <p>ティッカーシンボル(証券コード)</p>
    <%= form.label :code %>
    <%= form.text_field :code %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
