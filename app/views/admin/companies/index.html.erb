<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.stock.code if company.stock.present? %></td>
        <td><%= link_to 'Show', [:admin, company] %></td>
        <td><%= link_to 'Edit', edit_admin_company_path(company) %></td>
        <td><%= link_to 'Destroy', [:admin, company], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Update Report', admin_companies_update_report_path(company) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

